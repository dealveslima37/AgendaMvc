@model List<Contact>
@{
    ViewData["Title"] = "Listagem de contatos";
}

<a class="btn btn-primary mb-4" asp-controller="Contact" asp-action="Create">Novo contato</a>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mt-4" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-success mt-4" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
        @TempData["Error"]
    </div>
}

<div class="text-center">
    <h1>Listagem de contatos</h1>
</div>

<table class="table table-hover mt-4" id="contact-table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Telefone</th>
            <th>Grupo</th>
            <th>Detalhes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.Name</th>
                <th>@item.Phone</th>
                <th>@item.Group</th>
                <th><a class="btn btn-info" role="button" asp-controller="Contact" asp-action="Detail" asp-route-id="@item.Id">Detalhar</a></th>
            </tr>
        }
    </tbody>
</table>
